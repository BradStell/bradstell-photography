block variables
include /partials/mixins

doctype html
html(lang="en-US")
  head
    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-171805476-1")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-171805476-1');

    title= `Brad Stell Photography`
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=2.0")
    meta(http-equiv="content-language" content="en")
    link(rel="apple-touch-icon" sizes="180x180" href="./images/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./images/favicon-16x16.png")
    //- link(rel="manifest" href="./site.webmanifest")
    style
      include ../../../public/styles/jamesbradley.css
  body
    div.main-container-wrapper
      div.main-container
        div.content
          div.header-container
            div.image-container
              img.slider-image(src= `images/${topImgR}`)
              img.slider-image(src= `images/${topImgL}`)
            include /partials/menu-button

          div.featured-info-section
            h1.feature-title= title
            div.feature-content-wrapper
              p= explanation

          include /partials/scroll-by-text

          div.spacer

          block content

          include /partials/footer

    script(src="https://unpkg.com/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js" defer)
    script(src="js/index.js" defer)
