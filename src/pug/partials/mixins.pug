	-
		const sets = [
			{ name: 'No. 001', link: 'set-001.html' },
			{ name: 'No. 002', link: 'set-002.html' },
			{ name: 'No. 003', link: 'set-003.html' },
			{ name: 'No. 004', link: 'set-004.html' },
			{ name: 'No. 005', link: 'set-005.html' },
			{ name: 'No. 006', link: 'set-006.html' },
			{ name: 'No. 007', link: 'set-007.html' },
			{ name: 'No. 008', link: 'set-008.html' },
			{ name: 'No. 009', link: 'set-009.html' },
			{ name: 'No. 010', link: 'set-010.html' },
			{ name: 'No. 011', link: 'set-011.html' },
		]

	div.navigation-wrapper
		each set in sets
			a.nav-item(href= `${set.link}` class= activeSet === set.name ? 'viewing' : '')
				span= set.name
				span.selected-bar

mixin feature_nav(sets, pageID)
	-
		const firstSetID = sets[0].id

	div.navigation-wrapper(id="feature-nav-wrapper")
		each set in sets
			div.nav-item(
				id= `${set.id}-nav-item`
				name= `${set.id}-nav-item`
				onclick= `changeFeaturePageSet(event, '${pageID}', '${set.id}')`
				class= `${firstSetID === set.id ? 'viewing' : ''}`
			)
				span= set.name
				span.selected-bar

mixin image_container(path, title, location, aspectRatio)
	-
		//- width doesn't change
		const width = '577'
		let height

		switch (aspectRatio) {
			case 'landscape':
				height = '385'
				break

			case 'landscape-short':
				height = '462'
				break

			case 'landscape-long':
				height = '314'
				break

			case 'square':
				height = '577'
				break

			case 'portrait':
				height = '866'
				break
		}

	div.image-container
		img(
			src= `images/${path}`
			alt= path
			loading="lazy"
			id= path
			width= width
			height= height
			onload="(function(image){image.classList.add('fade-in');})(this)"
		)
		div.content-wrapper
			p.image-title= title
			p.location= location

			//- style="display: block; opacity: 0;"
