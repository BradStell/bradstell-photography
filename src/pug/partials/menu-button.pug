- var closeFn = 'onMenuClose'

div.menu-container(onclick='showHideMenu(event)')
	div.menu-button
		span Menu
	div.menu-options-container(id='menu-content-handle')
		span.menu-text Menu
		div.menu-icon-small
			include ./menu-icon-small
		div.menu-icon-mobile
			include ./menu-icon-mobile
		div.content
			include ./close-x

			div.menu-items
				a.menu-item(class= `${currentPage === 'home' ? 'viewing' : ''}` href="index.html")
					span Home
				a.menu-item(class= `${currentPage === 'photography' ? 'viewing' : ''}` href="set-001.html")
					span Photography
				div.menu-item(
					class= `${currentPage.includes('featurepage') ? 'viewing' : ''}`
					onclick="onFeatureMenuItemClicked()"
				)
					span Featured
					include ./chevron
				div.featured-container(id="menu-feature-container")
					a.sub-menu-item(href="water.html" class= currentPage === 'featurepage-water' ? 'viewing' : '')
						span water
					a.sub-menu-item
						span death valley
					a.sub-menu-item
						span yosemte
