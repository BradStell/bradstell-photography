div.main-container-wrapper
  background-color $color.white
  width 100%

  div.main-container
    div.content
      // overflow-x hidden

      div.home-image-and-menu-container
        position relative

        img.home-image
          width 1200px
          height auto
          max-width 100%

      div.name-container
        height 650px
        width 100%
        padding-left 142px

        h1.title-name
          color $color.black
          padding-top 54px
          font-size 200px
          font-weight 800
          line-height 233.2px
          letter-spacing -5px

        div.title-content-container
          width 628px

          p.title-content
            color $color.black
            font-weight 500
            font-size 24px
            line-height 32.78px

        div.view-all-link-wrapper
          padding-top 45px
          display flex
          flex-direction row
          align-items center

          a.view-all-photos
            font-weight 800
            font-size 16px
            line-height 21.86px
            letter-spacing 0.2em
            color $color.gold
            padding-right 24px

            &:hover + div.view-all-photos-line
              width 700px

          div.view-all-photos-line
            background-color $color.gold
            width 62px
            height 4px
            transition width 0.5s

      div.image-slider-container
        display flex
        flex-direction row
        overflow hidden

        img.slider-image
          width 1004px
          height 669px

@media only screen and (max-width: $breakpoints.home)
  div.main-container-wrapper
    div.main-container
      div.content
        div.name-container
          height 718px

          h1.title-name
            font-size 150px

          div.title-content-container
            width 450px

            p.title-content
              font-size 22px
        
          div.view-all-link-wrapper
            a.view-all-photos
              &:hover + div.view-all-photos-line
                width 470px

        div.image-slider-container
          img.slider-image
            height 500px

        div.scroll-by-text
