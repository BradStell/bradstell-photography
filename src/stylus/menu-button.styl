div.menu-container
  position absolute
  top 40px
  right 40px
  cursor pointer

  div.menu-button
    display flex
    justify-content left
    align-items center
    padding 40px
    width 344px
    height 80px
    background-color $color.black
    color #FFFFFF
    border-radius 100px
    font-size 24px

  div.menu-options-container
    position absolute
    top 0px
    right 16px
    transition width 1s, height 1s, right 0.5s 0.2s, top 0.5s 0.2s, border-radius 1s 0.2s
    width 132px
    height 45px
    background-color $color.black
    border-radius 100px

    div.content
      position relative
      opacity 0
      transition opacity 0.5s
      width 100%
      height 100%

      div.menu-items
        opacity 0
        transition opacity 0.3s 1s
        display flex
        flex-direction column
        padding-top 164px
        padding-left 164px

        .menu-item
          display flex
          flex-direction row
          width 520px

          &:hover
            span
              opacity 1

          span
            font-weight 800
            font-size 80px
            line-height 109px
            color white
            opacity 0.2
            transition opacity 0.3s

            &.viewing
              opacity 1

        div.featured-container
          display flex
          flex-direction column

          a.sub-menu-item
            font-weight 800
            font-size 30px
            line-height 60px
            letter-spacing 0.2em
            color white
            text-transform uppercase

      svg.close
        opacity 0
        transition opacity 0.3s
        position absolute
        top 64px
        right 64px

        path
          stroke $color.white

    &.viewing
      opacity 1
      right 0px
      width 100vw
      height 100vh
      top -40px
      right -40px
      border-radius 0px

      div.content
        opacity 1

        div.menu-items
          opacity 1

        svg
          opacity 1
