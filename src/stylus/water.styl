div.main-container-wrapper
  background-color $color.white
  width 100vw

  div.main-container
    div.content
      position relative

      div.header-container
        position relative

        div.image-container
          display flex
          flex-direction row-reverse
          overflow hidden

          img.slider-image
            width 1081px
            height 666px

      div.featured-info-section
        height 647px
        width 100%
        padding-top 104px
        padding-left 142px

        h1.feature-title
          color $color.black
          font-weight 800
          font-size 200px
          line-height 273px
          letter-spacing -0.05em

        div.feature-content-wrapper
          width 675px

          p
            font-weight 500
            font-size 24px
            line-height 33px
            color $color.black

      div.spacer
        height 277px
        width 100%

      div.feature-container
        width 70%

      div.side-menu
        position absolute
        right 0
        width 29%
        height 300px
        background-color red
        margin-left 17.92px
