div.image-container
  img
    width 100%
    height auto

  div.content-wrapper
    height 119.8px
    padding-top 25px
    padding-left 24.27px

    p
      font-size 14px
      line-height 19px
      letter-spacing -0.05em
      color $color.black

    p.image-title
      font-weight 800

    p.location
      font-weight normal

@media only screen and (max-width: $breakpoints.mobile)
  div.image-container
    div.content-wrapper
      height 93px
      padding-top 20px
      padding-left 24px
