div.main-footer
  background-color $color.black
  position relative
  height 374px
  cursor pointer

  a.view-all-photos
    color $color.white
    position absolute
    bottom 69px
    right 156px
    opacity 0.7
    transition opacity 0.5s
    font-size 16px
    font-weight 800
    line-height 22px
    letter-spacing 0.2em

  div
    position absolute
    bottom 58px
    right 105px
    transition opacity 0.5s
    opacity 0.7

    svg
      path
        fill $color.white

  &:hover
      a.view-all-photos
        opacity 1

      div
        svg
          opacity 1

  div.right-triangle-medium
    display none

@media only screen and (max-width: $breakpoints.home2)
  div.main-footer
    height 274px

    a.view-all-photos
      font-size 14px

    div.right-triangle-large
      display none

    div.right-triangle-medium
      display block
      bottom 64px
      right 115px
