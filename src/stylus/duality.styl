div.main-container-wrapper
  div.main-container
    div.content
      div.set-navigation-container-tablet
        display none

      div.feature-content
        display flex
        flex-direction row-reverse
        transition all 1s ease-in-out

        div.feature-container
          display none
          transition display 0.5s

          &.viewing
            display block

        div.side-menu
          div.navigation-wrapper
            padding-left 17.92px

@media only screen and (max-width: $breakpoints.tablet)
  div.main-container-wrapper
    div.main-container
      div.content
        div.set-navigation-container-tablet
          display block
          position sticky
          top 0px

        div.feature-content
          div.side-menu
            display none

            div.navigation-wrapper
              .nav-item
                margin-right 40px
                width 175px
                min-width 175px

                &.viewing
                  span.selected-bar
                    width 170px
